<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/request.css">
    <%- include('../links') %>
    <title>Request</title>
  </head>
  <body>
    <%- include('../navbar') %>

    <div class="container">
      <% if (user.userType === "user") { %>
        <h2>Request Book</h2>
        <form action="/request" method="post">
            <div class="form-group">
                <label for="bookName">Book Name:</label>
                <input type="text" id="bookName" name="bookName" required>
            </div>
            <div class="form-group">
                <label for="authorName">Author Name:</label>
                <input type="text" id="authorName" name="authorName" required>
            </div>
            <div class="form-group">
                <label for="publication">Publication:</label>
                <input type="text" id="publication" name="publication" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

      <% }else { %>
      <div class="requests">
        <h2>Requests</h2>
        <% if (requests.length === 0) { %>
        <p>No feedbacks yet.</p>
        <% } else { %> <% requests.forEach(request => { %>
        <div class="request"">
          <p><strong>Username:</strong> <%= request.username %></p>
          <p><strong>Book Name:</strong> <%= request.bookName %></p>
          <p><strong>Publication:</strong> <%= request.publication %></p>
          <p><strong>Author:</strong> <%= request.authorName %></p>
          <p><%= request.createdAt %></p>
        </div>
        <% }); %> <% } %>
      </div>

      <% } %>
    </div>
    
  </body>
</html>
